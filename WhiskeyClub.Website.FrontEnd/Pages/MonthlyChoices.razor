@page "/monthlyChoices"

<PageTitle>Monthly Choices</PageTitle>

<h1>Monthly Selections</h1>

<div class="container">
    <div class="row">
        <div class="col-md-auto">
            <button class="btn btn-primary" @onclick="CreateNewMonthlySelection">New Selection</button>
        </div>
    </div>
    <div class="row">
        <div class="col-md-auto">
            Search by date: <input type="text" id="date"/>
        </div>
        <div class="col-md-auto">
            Search by spirit name: <input type="text" id="spiritName"/>
        </div>
    </div>
    <div class="row">
        <div class="col-md-auto">
             <li class="list-group-item">Month</li>
            <li class="list-group-item">December</li>
        </div>
        <div class="col-md-auto">
            <li class="list-group-item">Year</li>
            <li class="list-group-item">2021</li>
        </div>
        <div class="col-md-auto">
            <li class="list-group-item">Spirit</li>
            <li class="list-group-item">Ardbeg</li>
        </div>
    </div>
</div>



